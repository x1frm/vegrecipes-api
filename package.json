{
  "name": "vegrecipes-api",
  "version": "0.0.1",
  "description": "API for a recipe storing and managing web application",
  "main": "dist/server.js",
  "scripts": {
    "start": "ts-node swagger/generate-swagger.js && nodemon src/server.ts",
    "test": "jest -o --runInBand --verbose",
    "test:debug": "DEBUG=vegrecipes* LOG_LEVEL=debug node -r ts-node/register --inspect node_modules/.bin/jest --runInBand -o",
    "test:all": "jest --runInBand",
    "coverage": "jest --coverage",
    "build": "rm -rf dist && tsc --build tsconfig.prod.json",
    "lint": "eslint ./ --ignore-path .gitignore --ext .ts,.js",
    "mt": "mtgen src/**/*.model.ts",
    "debug": "ts-node swagger/generate-swagger.js && DEBUG=vegrecipes* LOG_LEVEL=debug nodemon --inspect src/server.ts"
  },
  "author": {
    "name": "Alexander Shvets",
    "email": "alex-shvets@yandex.ru",
    "url": "https://github.com/x1frm"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache",
    "*.{js,ts,css,md}": "prettier --write"
  },
  "dependencies": {
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "glob": "^7.1.6",
    "helmet": "^4.4.1",
    "http-status-codes": "^2.1.4",
    "joi": "^17.4.0",
    "joi-objectid": "^3.0.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.11.13",
    "mongoose-to-swagger": "github:x1frm/mongoose-to-swagger#v1.2.1",
    "nanoid": "^3.1.22",
    "pino": "^6.11.2",
    "pino-debug": "^2.0.0",
    "pino-http": "^5.5.0",
    "pino-multi-stream": "^5.3.0",
    "swagger-autogen": "^2.6.0",
    "swagger-ui-express": "^4.1.6",
    "swagger2openapi": "^7.0.5",
    "website-scraper": "^4.2.3"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.1.7",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.22",
    "@types/pino": "^6.3.6",
    "@types/pino-http": "^5.4.0",
    "@types/pino-multi-stream": "^5.1.0",
    "@types/pino-std-serializers": "^2.4.1",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/website-scraper": "^1.2.5",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-security": "^1.4.0",
    "faker": "^5.5.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "mongoose-tsgen": "^7.1.3",
    "node-mocks-http": "^1.10.1",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.7.1",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
